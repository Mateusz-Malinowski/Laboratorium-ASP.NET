@model Dictionary<int, Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2>Contact List</h2>
<a class="btn btn-primary" asp-controller="Contact" asp-action="Create">Add contact</a>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Birth</th>
        <th>Actions</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Value.Name</td>
            <td>@item.Value.Email</td>
            <td>@item.Value.Phone</td>
            <td>@item.Value.Birth</td>
            <td>
                <a asp-controller="Contact" asp-action="Details" asp-route-id="@item.Value.Id" class="btn btn-primary">Details</a>
                <a asp-controller="Contact" asp-action="Update" asp-route-id="@item.Value.Id" class="btn btn-outline-info">Update</a>
                <a asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Value.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>